generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  lastname       String
  email          String   @unique
  hashedPassword String
  isProfessor    Boolean  @default(false)
  role           String   @default("Student")
  createdAt      DateTime @default(now())
  modifiedAt     DateTime @updatedAt

  //Relazioni studente
  reviews     Review[]
  enrollments Enrollment[]

  //Relazioni professore
  courses Course[]
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String?      @default("Dammi una descrizione!")
  createdAt   DateTime     @default(now())
  modifiedAt  DateTime     @updatedAt
  userId      Int //FK per User professore
  User        User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  files       File[]
  enrollments Enrollment[]

  @@unique([title, userId])
}

model File {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?  @default("Dammi una descrizione!")
  path         String?  @default("Dammi/un/path!")
  avrageRating Float?
  createdAt    DateTime @default(now())
  modifiedAt   DateTime @updatedAt
  courseId     Int //FK per corso
  course       Course   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  reviews      Review[]
}

model Review {
  id         Int      @id @default(autoincrement())
  text       String
  rating     Int
  userId     Int //FK per user studente
  fileId     Int //FK per file
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  review     File     @relation(fields: [fileId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, fileId])
}

model Enrollment {
  id         Int      @id @default(autoincrement())
  userId     Int //FK per user studente
  courseId   Int //FK per corso
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([userId, courseId])
}
